<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- 폰트 적용 + 굵기에 따라 정의 -->
    <style name="FontWeight_1_Thin">
        <item name="android:fontFamily">@font/scdream_thin</item>
    </style>

    <style name="FontWeight_2_ExtraLight">
        <item name="android:fontFamily">@font/scdream_extra_light</item>
    </style>

    <style name="FontWeight_3_Light">
        <item name="android:fontFamily">@font/scdream_light</item>
    </style>

    <style name="FontWeight_4_Regular">
        <item name="android:fontFamily">@font/scdream_regular</item>
    </style>

    <style name="FontWeight_5_Medium">
        <item name="android:fontFamily">@font/scdream_medium</item>
    </style>

    <style name="FontWeight_6_Bold">
        <item name="android:fontFamily">@font/scdream_bold</item>
    </style>

    <style name="FontWeight_7_ExtraBold">
        <item name="android:fontFamily">@font/scdream_extra_bold</item>
    </style>

    <style name="FontWeight_8_Heavy">
        <item name="android:fontFamily">@font/scdream_heavy</item>
    </style>

    <style name="FontWeight_9_Black">
        <item name="android:fontFamily">@font/scdream_black</item>
    </style>

    <!-- Extra Bold 텍스트 -->
    <style name="TextTitle" parent="FontWeight_7_ExtraBold"><item name="android:textSize">32sp</item></style>
    <style name="Text_30_Bold" parent="FontWeight_7_ExtraBold"><item name="android:textSize">30sp</item></style>
    <style name="Text_22_Bold" parent="FontWeight_7_ExtraBold"><item name="android:textSize">22sp</item></style>

    <style name="TextTitle.Black" parent="TextTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text_22_Bold.Black" parent="Text_22_Bold">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle.Green" parent="TextTitle">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextTitle.White" parent="TextTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_30_Bold.White" parent="Text_30_Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Bold 텍스트 -->
    <style name="Text_14_Bold" parent="FontWeight_6_Bold"><item name="android:textSize">14sp</item></style>
    <style name="Text_16_Bold" parent="FontWeight_6_Bold"><item name="android:textSize">16sp</item></style>
    <style name="Text_18_Bold" parent="FontWeight_6_Bold"><item name="android:textSize">18sp</item></style>

    <style name="Text_14_Bold.White" parent="Text_14_Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_16_Bold.White" parent="Text_16_Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_18_Bold.White" parent="Text_18_Bold">
        <item name="android:textColor">@color/white</item>
    </style>



    <!-- Medium 텍스트   -->
    <style name="Text_12_Medium" parent="FontWeight_5_Medium"><item name="android:textSize">12sp</item></style>
    <style name="Text_14_Medium" parent="FontWeight_5_Medium"><item name="android:textSize">14sp</item></style>
    <style name="Text_16_Medium" parent="FontWeight_5_Medium"><item name="android:textSize">16sp</item></style>

    <style name="Text_12_Medium.Black" parent="Text_12_Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text_12_Medium.White" parent="Text_12_Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_14_Medium.White" parent="Text_14_Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_16_Medium.White" parent="Text_16_Medium">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Regular 텍스트 -->
    <style name="TextSubTitle" parent="FontWeight_4_Regular">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSubTitle.Black" parent="TextSubTitle">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextRequestButton" parent="FontWeight_4_Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextRequestButton.White" parent="TextRequestButton">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextInBox" parent="FontWeight_4_Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInBox.Green" parent="TextInBox">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextInBox.Gray" parent="TextInBox">
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="TextInBox.White" parent="TextInBox">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextSubInfo" parent="FontWeight_4_Regular"><item name="android:textSize">12sp</item></style>
    <style name="Text_10_Regular" parent="FontWeight_4_Regular"><item name="android:textSize">10sp</item></style>

    <style name="TextSubInfo.Black" parent="TextSubInfo">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubInfo.Red" parent="TextSubInfo">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextSubInfo.Green" parent="TextSubInfo">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text_10_Regular.White" parent="Text_10_Regular">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_10_Regular.WeakGray" parent="Text_10_Regular">
        <item name="android:textColor">@color/gray2.5</item>
    </style>

    <style name="Text_10_Regular.Black" parent="Text_10_Regular">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 바텀 네비게이션 텍스트 -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Widget.BottomNavigationView.InActive" parent="Widget.BottomNavigationView">
        <item name="android:fontFamily">@font/scdream_regular</item>
    </style>

    <style name="Widget.BottomNavigationView.Active" parent="Widget.BottomNavigationView">
        <item name="android:fontFamily">@font/scdream_medium</item>
    </style>

    <!-- 칩 버튼 커스텀 -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/selector_chip_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="android:textAppearance">@style/TextSubInfo</item>
        <item name="rippleColor">@color/transparent</item>
    </style>

    <!-- 이미지 둥글게 설정 -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundingImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="TopRoundingImageView" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">20%</item>
    </style>

    <style name="BottomRoundingImageView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">20%</item>
    </style>

</resources>