<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 폰트 적용 + 굵기에 따라 정의 -->
    <style name="FontWeight_1_Thin"><item name="fontFamily">@font/scdream_thin</item></style>
    <style name="FontWeight_2_ExtraLight"><item name="fontFamily">@font/scdream_extra_light</item></style>
    <style name="FontWeight_3_Light"><item name="fontFamily">@font/scdream_light</item></style>
    <style name="FontWeight_4_Regular"><item name="fontFamily">@font/scdream_regular</item></style>
    <style name="FontWeight_5_Medium"><item name="fontFamily">@font/scdream_medium</item></style>
    <style name="FontWeight_6_Bold"><item name="fontFamily">@font/scdream_bold</item></style>
    <style name="FontWeight_7_ExtraBold"><item name="fontFamily">@font/scdream_extra_bold</item></style>
    <style name="FontWeight_8_Heavy"><item name="fontFamily">@font/scdream_heavy</item></style>
    <style name="FontWeight_9_Black"><item name="fontFamily">@font/scdream_black</item></style>

    <!-- Bold 텍스트 -->
    <style name="TextTitle" parent="FontWeight_7_ExtraBold">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextTitle.Black" parent="TextTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle.Green" parent="TextTitle">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <!-- Regular 텍스트 -->
    <style name="TextSubTitle" parent="FontWeight_4_Regular">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSubTitle.Black" parent="TextSubTitle">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextRequestButton" parent="FontWeight_4_Regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextRequestButton.White" parent="TextRequestButton">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextInBox" parent="FontWeight_4_Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInBox.Green" parent="TextInBox">
        <item name="android:textColor">@color/primary_color</item>
    </style>


    <style name="TextSubInfo" parent="FontWeight_4_Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextSubInfo.Black" parent="TextSubInfo">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubInfo.Red" parent="TextSubInfo">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextSubInfo.Green" parent="TextSubInfo">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <!-- 바텀 네비게이션 텍스트 -->
    <style name="Widget.BottomNavigationViewInActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/scdream_regular</item>
    </style>

    <style name="Widget.BottomNavigationViewActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/scdream_medium</item>
    </style>

</resources>